<div class="main-contents-wrapper">
  <div class="main-contents">
    <h2 class="album-show-title">
      <%= link_to(@album.artist.name, "#", class: "show-album-artist") %>Ôºè
      <%= @album.title %>
    </h2>
    <div class="show-wrapper">
      <img src="<%= "/album_images/#{@album.image_name}" %>" class="album-show-jacket">
      <% @album.reviews.each do |review| %>
        <p class="album-review"><%= simple_format(review.letter) %></p>
      <% end %>
    </div>
  </div>
</div>