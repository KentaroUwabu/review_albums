<div class="main-contents-wrapper">
  <div class="main-contents">
    <h2 class="albums-show-title">
      <%= link_to(@album.artist.name, "/artists/#{@album.artist.id}") %>／
      <%= @album.title %>
    </h2>
    <div class="show-wrapper">
      <img src="<%= "/album_images/#{@album.image_name}" %>" class="album-show-jacket">
      <%= simple_format(@album.review.letter) %>
    </div>
    <div class="show-items">
      <p class="album-user">投稿者：<%= link_to(@album.review.user.nickname, "/users/#{@album.review.user.id}") %></p>
      <% if user_signed_in? && @album.review.user_id == current_user.id %>
        <button class="albums-show-btn"><%= link_to("編集", "/albums/#{@album.id}/edit") %></button>
        <button class="albums-show-btn"><%= link_to("削除", "/albums/#{@album.id}", {method: "delete"}) %></button>
      <% end %>
    </div>
  </div>
</div>