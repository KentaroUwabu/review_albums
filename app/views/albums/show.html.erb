<div class="main-contents-wrapper">
  <div class="main-contents">
    <h2 class="album-show-title">
      <%= link_to(@album.artist.name, "/artists/#{@album.artist.id}") %>／
      <%= @album.title %>
    </h2>
    <div class="show-wrapper">
      <img src="<%= "/album_images/#{@album.image_name}" %>" class="album-show-jacket">
        <p class="album-review"><%= simple_format(@album.review.letter) %></p>
    </div>
    <p>投稿者：<%= link_to(@album.review.user.nickname, "/users/#{@album.review.user.id}") %></p>
    <% if @album.review.user_id == current_user.id %>
      <%= link_to("編集", "/albums/#{@album.id}/edit") %>
      <%= link_to("削除", "/albums/#{@album.id}", {method: "delete"}) %>
    <% end %>
  </div>
</div>